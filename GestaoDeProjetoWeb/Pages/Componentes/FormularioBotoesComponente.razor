<div class="col-12 grupoBotoes">
    <button type="button" class="botaoCustomizado botaoCustomizadoPesquisar" @onclick="OnCancel">
        <ion-icon class="botaoCustomizadoIcone"  name="exit-outline"></ion-icon>
        Cancelar
    </button>
    <button type="submit" class="botaoCustomizado botaoCustomizadoInserir">
        <ion-icon class="botaoCustomizadoIcone"  name="save-outline"></ion-icon>
        Salvar
    </button>
</div>

@code {
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnSave { get; set; }

    private async Task HandleCancel()
    {
        if (OnCancel.HasDelegate)
        {
            await OnCancel.InvokeAsync();
        }
    }

    private async Task HandleSave()
    {
        if (OnSave.HasDelegate)
        {
            await OnSave.InvokeAsync();
        }
    }
}