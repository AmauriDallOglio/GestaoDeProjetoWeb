
<div class="row g-2 align-items-center adicionaEspaco borda fontePersonalizada">
    <div class="col-md-auto">
        <label for="filtro" class="col-form-label">Filtrar:</label>
    </div>
    <div class="col-md-auto">
        <input type="text" class="form-control" id="filtro" @bind="@Filtro" />
    </div>
    <div class="col-md-auto">
        <button class="customizado-btn customizado-btn-pesquisar" @onclick="AplicarFiltro">Aplicar</button>
    </div>
</div>

@code {
    [Parameter] public string Filtro { get; set; }
    [Parameter] public EventCallback<string> OnFiltroChanged { get; set; }


    private async Task AplicarFiltro()
    {
        await OnFiltroChanged.InvokeAsync(Filtro);
    }
}
